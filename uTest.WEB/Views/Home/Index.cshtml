@model IEnumerable<uTest.WEB.ViewModels.TestViewModel>

@{
    ViewBag.Title = "Home";
}

<div class="row"></div>
<div class="row">
    <div class="col l3 hide-on-med-and-down pushpin">
        <div class="moving-block">
            <div class="row">
                <div id="right-sidebar" class="card centralized z-depth-0">
                    <p class="card-title flow-text white-text menu-par">Menu</p>
                    <div class="collection with-header no-margin-top">
                        @Html.RouteLink("Home", new {controller = "Home", action = "Index"}, new {@class = "collection-item main-color-background active"})
                        @Html.RouteLink("My tasks", new {controller = "Task", action = "Index"}, new {@class = "collection-item main-color-text"})
                        @Html.RouteLink("Public tests", new {controller = "Test", action = "Public"}, new {@class = "collection-item main-color-text"})
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col l9 m12 s12 push-l3">
        <div class="row">
            <div class="col l11 m12 s12">
                <div class="row">
                    <p class="flow-text welcome-text centralized">Welcome</p>
                    <p class="flow-text sub-welcome-text centralized">Are you ready for some testing?</p>
                    <hr class="colored-hr-thin" />
                </div>
                <div class="row">
                    <div class="col l10 m10 s12 push-l1 push-m1">
                        <p class="flow-text sub-welcome-text centralized">To use uTest service you have to sign up</p>
                        <div class="row">
                            <div class="col l4 m4 s8 push-l2 push-m2 push-s2">
                                <div class="collection no-margin-top">
                                    @Html.RouteLink("LogIn", new { controller = "Account", action = "Login" }, new { @class = "collection-item main-color-text" })
                                </div>
                            </div>
                            <div class="col l4 m4 s8 push-l2 push-m2 push-s2">
                                <div class="collection no-margin-top">
                                    @Html.RouteLink("Register", new { controller = "Account", action = "Register" }, new { @class = "collection-item main-color-text" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>      
    </div>
</div>

