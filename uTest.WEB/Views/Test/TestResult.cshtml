@model uTest.WEB.ViewModels.SolvedTestViewModel

@{
    ViewBag.Title = "Test result";
}

<div class="row"></div>
<div class="row">
    <div class="col l3 hide-on-med-and-down pushpin">
        <div class="moving-block">
            <div class="row">
                <div id="right-sidebar" class="card centralized z-depth-0">
                    <p class="card-title flow-text white-text menu-par">Menu</p>
                    <div class="collection with-header no-margin-top">
                        @Html.RouteLink("Home", new { controller = "Home", action = "Index" }, new { @class = "collection-item main-color-text" })
                        @Html.RouteLink("My tasks", new { controller = "Task", action = "Index" }, new { @class = "collection-item main-color-text" })
                        @Html.RouteLink("Public tests", new { controller = "Test", action = "Public" }, new { @class = "collection-item main-color-text" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col l9 m12 s12 push-l3">
        <div class="row">
            <div class="col l11 m12 s12">
                <div class="row">
                    <p class="flow-text welcome-text centralized">Test result</p>
                    <hr class="colored-hr-thin" />
                </div>
                <div class="row">
                    @if (Model == null)
                    {
                        <p class="flow-text sub-welcome-text centralized">Oops.. Something goes wrong!</p>
                    }
                    else
                    {
                        <p class="flow-text sub-welcome-text">Test name: @Model.Test.Name</p>
                        <p class="flow-text sub-welcome-text">Questions: @Model.Test.QuestionsToSolve</p>
                        if (ViewBag.Solved != null)
                        {
                            <p class="flow-text sub-welcome-text">Solved: @ViewBag.Solved</p>
                        }
                        <p class="flow-text avarage-text centralized">Result: @Model.Result/100</p>
                        <div class="row">
                            <div class="col s12 m6 l6 centralized">
                                <a class="btn btn-default main-color-background" id="btn-home" href="/Home/Index">Home</a>
                            </div>
                            <div class="col s12 m6 l6 centralized">
                                <a class="btn btn-default main-color-background" href="/Test/Public">More tests</a>
                            </div>
                        </div>
                    }                    
                </div>
            </div>
        </div>
    </div>
</div>



